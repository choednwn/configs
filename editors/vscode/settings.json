{
  /**
   * EDITOR SETTINGS
   */
  "editor.formatOnSave": true,
  "editor.fontSize": 13,
  "editor.fontFamily": "'Monaspace Krypton', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "editor.wordWrap": "off",
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.unicodeHighlight.allowedCharacters": {
    "â€“": true
  },
  "editor.defaultColorDecorators": "auto",
  "editor.bracketPairColorization.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.lineHeight": 1.64,
  "editor.guides.indentation": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.codeActionsOnSave": {
    "source.sortImports": "always"
    // "source.fixAll.eslint": "always"
  },

  /**
   * EXPLORER ESTTINGS
   */
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,

  /**
   * WORKBENCH SETTINGS
   */
  "workbench.iconTheme": "bearded-icons",
  "workbench.colorTheme": "Anya",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.indent": 20,
  "workbench.startupEditor": "none",
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#da7171",
    "editorBracketHighlight.foreground2": "#c893fd",
    "editorBracketHighlight.foreground3": "#67cfb3",
    "editorBracketHighlight.foreground4": "#da7171",
    "editorBracketHighlight.foreground5": "#c893fd",
    "editorBracketHighlight.foreground6": "#67cfb3"
  },
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "{git,gitlens}:/**/*.{md,csv,svg}": "default"
  },

  /**
   * TERMINAL SETTINGS
   */
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Monaspace Krypton'",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo"]
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },

  /**
   * GIT SETTINGS
   */
  "git.mergeEditor": true,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "git.blame.editorDecoration.enabled": true,
  "git.blame.statusBarItem.enabled": true,
  "git.blame.editorDecoration.template": "${authorName} (${authorDateAgo})",
  "git.ignoreRebaseWarning": true,

  /**
   * COPILOT SETTINGS
   */
  "chat.commandCenter.enabled": false,

  /**
   * EXTENSIONS SETTINGS
   */
  "extensions.ignoreRecommendations": true,

  /**
   * FILES SETTINGS
   */
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/._*": true,
    "**/.git": false
  },
  "files.associations": {
    "*.svx": "markdown"
  },

  /**
   *
   * LANGUAGE SPECIFIC SETTINGS
   *
   */
  // ===========> C, CPP <===========
  "[c][cpp]": {
    // {Commented out as I am using the clangd extension}
    // "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
  "clangd.arguments": ["--fallback-style=llvm"],
  "clangd.path": "C:\\Program Files\\LLVM\\bin\\clangd.exe",
  "cmake.configureOnOpen": true,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.showConfigureWithDebuggerNotification": false,
  "cmake.showOptionsMovedNotification": false,
  "cmake.revealLog": "never",

  // ===========> CSHARP <===========
  "dotnet.codeLens.enableReferencesCodeLens": false,

  // ===========> PYTHON <===========
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "python.REPL.enableREPLSmartSend": false,
  "isort.args": ["--profile", "black"],

  // ===========> JAVA <===========
  "redhat.telemetry.enabled": false,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-23",
      "path": "C:\\Program Files\\Java\\jdk-23",
      "default": true
    }
  ],
  "java.jdt.ls.vmargs": "-Xmx1G",

  // html
  "[html][css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "tailwindCSS.classAttributes": ["class", "className", "styles", "style"],

  // ===========> JAVASCRIPT, TYPESCRIPT <===========
  "[javascript][javascriptreact][typescript][typescriptreact][mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "js/ts.implicitProjectConfig.experimentalDecorators": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "svelte.enable-ts-plugin": true,

  // ===========> ZIG <===========
  "zig.initialSetupDone": true,

  // ===========> JSON <===========
  "[json][jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ===========> PS1 <===========
  "[powershell]": {
    "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
    "editor.semanticHighlighting.enabled": false,
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.formatOnSave": false
  },

  /**
   *
   * EXTENSION SETTINGS
   *
   */

  /**
   * ===========> COPILOT <===========
   */
  "github.copilot.editor.enableAutoCompletions": false,

  // ===========> VS-VIM <===========
  "vim.smartRelativeLine": true,
  "vim.easymotion": true,
  "vim.foldfix": true,
  "vim.enableNeovim": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [":", "w", "<enter>"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": [":", "W", "<enter>"],
      "commands": ["workbench.action.files.save"]
    }
  ],

  // ===========> BETTER COMMENTS <===========
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#d94e6c",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  // ===========> PRESENTATION MODE <===========
  "presentation-mode.active": {
    // "editor.fontSize": 20
    "window.zoomLevel": 2
  },

  // ===========> LIVE PREVIEW <===========
  "livePreview.customExternalBrowser": "Firefox"
}
